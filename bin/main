#!/usr/bin/env ruby
class Player
  attr_accessor :name, :num_of_games, :num_of_wins, :num_of_losses

  def initialize(name)
    @name = name
    # num_of_games = 0
    # num_of_wins = 0
    # num_of_losses = 0
  end
end

puts
puts 'Welcome to Tic-Tac-Toe!'
puts
puts 'Enter name for player 1: '
player_one = gets.chomp
player1 = Player.new(player_one)
puts
puts 'Enter name for player 2: '
player_two = gets.chomp
player2 = Player.new(player_two)
puts
puts 'The game will start now!'
puts "#{player1.name} will be X & #{player2.name} will be O."
puts 'Game Instructions: Choose a number to place your move!'
puts 'Have fun!'
puts
puts
puts '| 1 | 2 | 3 |
| 4 | 5 | 6 |
